{% extends ':Frontend:base.html.twig' %}

{% block title %}Portafolio{% endblock %}

{% block main %}
    <div class="container container-top">
        <div class="row">
            {% if allPortafolios | length > 0 %}
                {% for portafolio in allPortafolios %}
                <div class="col-md-4">
                    {% include ':Frontend/includes:image_detail.html.twig' with {object: portafolio, filter: '780xY'} %}
                    <div class="caption">
                        <h4>{{ portafolio.title }}</h4>
                        <p>{{ portafolio.description |truncate(100) | raw }}</p>
                    </div>
                </div>
                {% if loop.index is divisible by(3) %}
                    </div>
                    <div class="row extra-m-top">
                {% endif %}
                {% endfor %}
            {% else %}
                {% include ':Frontend/includes:under_construciton_warning.html.twig' %}
            {% endif %}
        </div>
    </div>
{% endblock %}
