{% extends ':Frontend:base.html.twig' %}

{% block title %}{{ post.title }} · Blog{% endblock %}

{% block main %}
    <div class="container container-main">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-12">
                        <div class="thumbnail">
                            <div class="row">
                                {# left side #}
                                <div class="col-sm-4 extra-m-bottom">
                                    {% include ':Frontend/includes:image_detail.html.twig' with {object: post, filter: '780xY'} %}
                                </div>
                                {# Right side #}
                                <div class="col-sm-8">
                                    <h2 class="">{{ post.title }}</h2>
                                    <h4 class="text-muted">{{ post.publishedAt | date('d/m/Y') }}</h4>
                                    {% for tag in post.tags %}
                                        {% spaceless %}
                                            <a class="c-blue-md" href="{{ path('front_blog_tag_detail', {slug: tag.slug}) }}">{{ tag.title }}</a>
                                            {% if loop.index != loop.last %}, {% endif %}
                                        {% endspaceless %}
                                    {% endfor %}
                                    <div class="p-vertical underlined-anchors">
                                        <p>{{ post.description | raw }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="blog-sidebox">
                    <h3 class="no-m-top">Categorías</h3>
                    <hr>
                    <div class="sidebox-content">
                        <ul class="list-unstyled categories-selector">
                            {% for tag in tags if tag.posts | length > 0 %}
                                <li><a href="{{ path('front_blog_tag_detail', {slug: tag.slug}) }}">{{ tag.title }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
